<h1 class="text-center text-2xl font-bold mb-4">Carrito</h1>

{{#if cart.products.length}}
  <ul class="list-disc pl-6">
    {{#each cart.products}}
      <li class="mb-2">
        {{this.product.title}} - ${{this.product.price}} x {{this.quantity}}
      </li>
    {{/each}}
  </ul>
{{else}}
  <p class="text-center text-gray-500">El carrito está vacío.</p>
{{/if}}

<div class="text-center mt-4">
  <a href="/" class="text-blue-500 underline">⬅ Volver a productos</a>
</div>